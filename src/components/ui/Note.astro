---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  title: string;
}

const {
  title = 'Note',
  class: className,
  'class:list': classList,
  ...props
} = Astro.props;
---

<div class:list={['card', className, classList]} {...props}>
  <div class="my-0 text-lg font-bold">{title}</div>

  <div class="text-muted-foreground mt-4 mb-0 text-sm">
    <slot />
  </div>
</div>
