---
import IndividualCard from '@/components/cards/IndividualCard.astro';
import OrganizationCard from '@/components/cards/OrganizationCard.astro';
import OpenCollectiveLink from '@/components/OpenCollectiveLink.astro';
import Container from '@/components/ui/Container.astro';
import Link from '@/components/ui/Link.astro';
import { getOpenCollective } from '@/lib/services/open-collective';
import { Icon } from 'astro-icon/components';

const [organizationsSponsors, individualSponsors] = await Promise.all([
  getOpenCollective('organizations'),
  getOpenCollective('users'),
]);
---

<section class="py-20">
  <Container>
    <div class="flex items-center justify-center gap-2">
      <Icon class="h-8 w-8" name="simple-icons:opencollective" />
      <h2 class="text-2xl font-bold">Open Collective</h2>
    </div>

    <!-- Organizations -->
    <div class="mt-12 mb-8 text-center">
      <h3 class="mb-2 text-xl font-bold">
        {organizationsSponsors?.length} Organizations
      </h3>

      <p>
        <Link href="https://opencollective.com/sdkman/contribute"
          >Contribute to our collective</Link
        >
      </p>
    </div>

    <div id="organizations-sponsors" class="overflow-hidden">
      <div class="-ml-4 flex">
        {
          organizationsSponsors?.map((organization) => (
            <div class="min-w-0 shrink-0 grow-0 basis-full pl-4 md:basis-1/2 lg:basis-1/3 xl:basis-1/4">
              <OrganizationCard organization={organization} />
            </div>
          ))
        }
      </div>
    </div>

    <!-- Individual -->
    <div class="mt-12 mb-8 text-center">
      <h3 class="mb-2 text-xl font-bold">
        {individualSponsors?.length} People
      </h3>

      <p>
        <Link href="https://opencollective.com/sdkman/contribute"
          >Contribute to our collective</Link
        >
      </p>
    </div>

    <div id="individual-sponsors" class="overflow-hidden">
      <div class="-ml-4 flex">
        {
          individualSponsors?.map((individual) => (
            <div class="min-w-0 shrink-0 grow-0 basis-full pl-4 md:basis-1/4 lg:basis-1/5 xl:basis-1/6">
              <IndividualCard individual={individual} />
            </div>
          ))
        }
      </div>
    </div>

    <div class="mt-10 flex items-center justify-center">
      <OpenCollectiveLink />
    </div>
  </Container>
</section>

<script>
  import EmblaCarousel from 'embla-carousel';
  import AutoScroll from 'embla-carousel-auto-scroll';

  const organizationsSponsorsNode = document.getElementById(
    'organizations-sponsors',
  );
  const organizationsSponsorsOptions = { loop: true };
  const organizationsPlugins = [AutoScroll({ speed: 0.5 })];

  if (!!organizationsSponsorsNode) {
    EmblaCarousel(
      organizationsSponsorsNode as HTMLElement,
      organizationsSponsorsOptions,
      organizationsPlugins,
    );
  }

  const individualSponsorsNode = document.getElementById('individual-sponsors');
  const individualSponsorsOptions = { loop: true };
  const individualPlugins = [AutoScroll({ speed: 0.8 })];

  if (!!individualSponsorsNode) {
    EmblaCarousel(
      individualSponsorsNode as HTMLElement,
      individualSponsorsOptions,
      individualPlugins,
    );
  }
</script>
